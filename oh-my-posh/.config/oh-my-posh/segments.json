{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"console_title_template": "{{.Folder}}{{if .Root}} :: root{{end}}",
	"final_space": true,
	"version": 2,
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "status",
					"style": "plain",
					"foreground": "green",
					"foreground_templates": ["{{ if .Error }}red{{ end }}"],
					"template": " {{ if .Error }}\uf06a{{ else }}\uf058{{ end }} ",
					"properties": {
						"always_enabled": true
					}
				},
				{
					"type": "path",
					"style": "diamond",
					"leading_diamond": "\ue0b6",
					"trailing_diamond": "\ue0b0",
					"foreground": "#000000",
					"background": "lightGreen",
					"properties": {
						"style": "folder"
					},
					"template": " \uea83 {{ .Path }} "
				},
				{
					"type": "sysinfo",
					"powerline_symbol": "",
					"foreground": "#ffffff",
					"background": "#607D8B",
					"template": "  {{ round .PhysicalPercentUsed .Precision }}% ",
					"properties": {
						"precision": 2
					},
					"style": "powerline"
				},
				{
					"type": "python",
					"style": "powerline",
					"powerline_symbol": "",
					"foreground": "#FFFFFF",
					"background": "blue",
					"template": " {{ if .Venv }}({{ .Venv }}) {{ end }}",
					"properties": {
						"display_mode": "enviroment",
						"home_enabled": true
					}
				},
				{
					"type": "python",
					"style": "powerline",
					"powerline_symbol": "",
					"foreground": "#000000",
					"background": "yellow",
					"template": "  {{ .Full }} ",
					"properties": {
						"display_mode": "enviroment",
						"home_enabled": true
					}
				},
				{
					"type": "git",
					"style": "powerline",
					"powerline_symbol": "",
					"foreground": "#000000",
					"background": "#FF9800",
					"template": "{{if .UpstreamIcon }} {{ .UpstreamIcon }}{{ end }} {{ .HEAD }} {{ if .Working.Changed }} \uF044 {{ .Working.String }} {{ end }}",
					"properties": {
						"fetch_status": true,
						"fetch_stash_count": true,
						"fetch_upstream_icon": true,
						"untracked_modes": {
							"/Users/user/Projects/oh-my-posh/": "no"
						}
					}
				}
			]
		}
	]
}
